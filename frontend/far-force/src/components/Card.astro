---
import { getImage } from "../api/image";

interface Props {
  title: string;
  rating: number;
  url: string;
}

const { url, title, rating } = Astro.props;

const image = await getImage(url);
---

<li class="link-card">
  <div class="card-body">
    <div class="card-info">
      <h2>
        {title}
        <span>&rarr;</span>
      </h2>
      <p>
        Rating: {rating}
      </p>
      <p>
        Description: Lorem ipsum dolor sit amet, consectetur adipisicing elit.
        Cum dolorem, vitae voluptate impedit atque exercitationem illo dicta
        adipisci repudiandae ab necessitatibus ipsa itaque? Aliquid veniam
        placeat, excepturi magnam omnis totam.
      </p>
    </div>
    <img src={image} />
  </div>
</li>
<style>
  .card-body {
    display: flex;
    column-gap: 20px;
    justify-content: space-between;
  }

  .card-info {
    display: flex;
    flex-direction: column;
    flex: 0.5;
  }
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > div {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }

  img {
    flex: 0.5;
    aspect-ratio: 16/9;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
